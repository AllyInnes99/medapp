<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:name="com.example.medapp.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MedApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.medapp.UpdateMedActivity" />
        <activity android:name="com.example.medapp.AddWeeklyApplication" />
        <activity android:name="com.example.medapp.AddDailyApplication" />
        <activity android:name="com.example.medapp.WeeklyActivity" />
        <activity android:name="com.example.medapp.DailyActivity" />
        <activity android:name="com.example.medapp.AddMedicationActivity" />
        <activity android:name="com.example.medapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name="com.example.medapp.AlertReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.INPUT_METHOD_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.example.medapp.RefreshReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.INPUT_METHOD_CHANGED" />
            </intent-filter>
        </receiver>

    </application>


</manifest>